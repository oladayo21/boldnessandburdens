---
import BaseLayout from '../layouts/BaseLayout.astro';

const eventJsonLd = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": "Boldness and Burdens Conference 2026",
  "description": "A transformative summer camp designed to equip young people with godly courage, faith and clarity to face life's challenges.",
  "startDate": "2026-07-16",
  "endDate": "2026-07-19",
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "location": {
    "@type": "Place",
    "name": "KJFE Chance",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Teufelsseechaussee 17",
      "addressLocality": "Berlin",
      "postalCode": "14193",
      "addressCountry": "DE"
    }
  },
  "image": "https://images.unsplash.com/photo-1507692049790-de58290a4334?w=1200&q=80",
  "organizer": {
    "@type": "Organization",
    "name": "Boldness and Burdens",
    "url": "https://boldnessandburdens.com"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "EUR",
    "availability": "https://schema.org/InStock",
    "url": "https://boldnessandburdens.com/register"
  },
  "isAccessibleForFree": true
};
---

<BaseLayout
  title="BBC'26 - School of the Spirit | Boldness and Burdens Conference"
  canonicalPath="/"
>
  <script type="application/ld+json" set:html={JSON.stringify(eventJsonLd)} />
  <main>
    <!-- Hero Section -->
    <header class="hero">
      <div class="hero-image">
        <img
          src="/hero.jpg"
          alt="BBC'26 School of the Spirit - 1 Conference, 3 Nights. Prayer, Worship, Fellowship, Divine Encounters."
          loading="eager"
        />
      </div>
      <div class="hero-content">
        <div class="hero-inner animate-fade-in">
          <p class="hero-tagline">
            A transformative summer camp to equip young people
            with godly courage, faith and clarity.
          </p>
          <div class="hero-details">
            <div class="hero-detail">
              <span class="hero-detail-label">When</span>
              <span class="hero-detail-value">July 16-19<br/><span class="hero-detail-year">2026</span></span>
            </div>
            <div class="hero-detail">
              <span class="hero-detail-label">Where</span>
              <span class="hero-detail-value">Berlin<br/><span class="hero-detail-sub">Grunewald</span></span>
            </div>
            <div class="hero-detail">
              <span class="hero-detail-label">Cost</span>
              <span class="hero-detail-value">Free</span>
            </div>
          </div>
          <a href="/register" class="btn btn--primary hero-cta">Register Now</a>
        </div>
      </div>
    </header>

    <!-- Countdown Section -->
    <section class="countdown-section">
      <div class="container">
        <div class="countdown" id="countdown">
          <div class="countdown-item">
            <span class="countdown-value" id="days">---</span>
            <span class="countdown-label">Days</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-value" id="hours">--</span>
            <span class="countdown-label">Hours</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-value" id="minutes">--</span>
            <span class="countdown-label">Minutes</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-value" id="seconds">--</span>
            <span class="countdown-label">Seconds</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Vision Section -->
    <section class="vision">
      <div class="container container--narrow">
        <h2 class="section-title">Time for Boldness & Burdens Conference 2026</h2>
        <div class="divider"></div>
        <p class="vision-intro">
          There are special times and seasons. Moments God sets apart for encounter,
          alignment, and renewal. Boldness & Burdens Conference is a gathering set apart
          for young people, individuals, and families who desire more of God.
        </p>
        <blockquote class="vision-highlight">
          <p>This is a School of the Spirit.</p>
          <p>A place of prayer, teaching, waiting, and encounter.</p>
        </blockquote>
        <h3 class="vision-subheading">What to Expect</h3>
        <ul class="vision-list">
          <li>Extended times of prayer</li>
          <li>Worship and spiritual songs</li>
          <li>Teaching and impartation</li>
          <li>Space for God to move supernaturally</li>
          <li>Moments of personal encounter and renewal</li>
        </ul>
        <p class="vision-closing">
          This is a time to lay down burdens and receive boldness.
        </p>
        <p class="vision-cta">
          <strong>Pray. Plan. Prepare. Invite a friend. Come expectant.</strong>
        </p>
      </div>
    </section>

    <!-- Details Section -->
    <section class="details">
      <div class="container">
        <div class="details-grid">
          <div class="detail-card animate-fade-in-up">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="4" width="18" height="18" rx="2"/>
              <path d="M16 2v4M8 2v4M3 10h18"/>
              <path d="M8 14h.01M12 14h.01M16 14h.01M8 18h.01M12 18h.01"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">When</span>
              <h3 class="detail-value">July 16-19</h3>
              <p class="detail-sub">2026</p>
            </div>
          </div>
          <div class="detail-card animate-fade-in-up delay-1">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
              <circle cx="12" cy="9" r="2.5"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">Where</span>
              <h3 class="detail-value">Berlin-Grunewald</h3>
              <p class="detail-sub">KJFE, Chance<br/>Teufelsseechaussee 17<br/>14193 Berlin</p>
            </div>
          </div>
          <div class="detail-card animate-fade-in-up delay-2">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9z"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">Duration</span>
              <h3 class="detail-value">3 Nights</h3>
              <p class="detail-sub">1 Conference</p>
            </div>
          </div>
          <div class="detail-card animate-fade-in-up delay-3">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M20 12v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-6"/>
              <path d="M12 3v12M12 3l4 4M12 3 8 7"/>
              <rect x="2" y="9" width="20" height="5" rx="1"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">Cost</span>
              <h3 class="detail-value">Free</h3>
              <p class="detail-sub">Registration required</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section class="experience">
      <div class="container">
        <h2 class="section-title">The Experience</h2>
        <div class="divider"></div>
        <div class="experience-grid">
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 5c-1.5-2-4-2.5-6-1s-2.5 4.5-1 7c1 1.5 7 7 7 7s6-5.5 7-7c1.5-2.5 1-5.5-1-7s-4.5-1-6 1z"/>
              <path d="M12 5v4M10 7h4"/>
            </svg>
            <h3>Prayer</h3>
            <p>Extended times of personal and corporate prayer</p>
          </div>
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v4M12 19v4M4.22 4.22l2.83 2.83M16.95 16.95l2.83 2.83M1 12h4M19 12h4M4.22 19.78l2.83-2.83M16.95 7.05l2.83-2.83"/>
            </svg>
            <h3>Worship</h3>
            <p>Spirit-led worship and spiritual songs</p>
          </div>
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="9" cy="7" r="4"/>
              <path d="M3 21v-2a4 4 0 0 1 4-4h4a4 4 0 0 1 4 4v2"/>
              <circle cx="17" cy="10" r="3"/>
              <path d="M21 21v-1.5a3 3 0 0 0-3-3h-1"/>
            </svg>
            <h3>Fellowship</h3>
            <p>Connect with like-minded believers</p>
          </div>
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2l2.4 7.4H22l-6.2 4.5 2.4 7.4L12 17l-6.2 4.3 2.4-7.4L2 9.4h7.6z"/>
            </svg>
            <h3>Encounters</h3>
            <p>Space for God to move supernaturally</p>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included Section -->
    <section class="included">
      <div class="container">
        <div class="included-grid">
          <div class="included-text">
            <h2 class="section-title">What's Included</h2>
            <div class="divider"></div>
            <ul class="included-list">
              <li>
                <strong>Accommodation</strong>
                <span>Provided free of charge</span>
              </li>
              <li>
                <strong>Meals</strong>
                <span>One meal per day provided. Bring your own snacks if needed</span>
              </li>
            </ul>
          </div>
          <div class="included-bring">
            <h3>What to Bring</h3>
            <p class="bring-intro">Please bring your personal toiletries:</p>
            <ul class="bring-list">
              <li>Towel</li>
              <li>Blanket</li>
              <li>Soap / shower gel</li>
              <li>Toothbrush & toothpaste</li>
              <li>Any personal hygiene items</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Support Section -->
    <section class="support">
      <div class="container container--narrow">
        <h2 class="section-title">Support the Conference</h2>
        <div class="divider"></div>
        <p class="support-intro">
          The conference is completely free for all participants. If you feel led to support
          the work financially, here are some ways you can give.
        </p>
        <div class="support-grid">
          <div class="support-card">
            <h3>PayPal</h3>
            <p>Send via PayPal to support the conference directly.</p>
            <a href="https://www.paypal.me/HeyMakhel" target="_blank" rel="noopener noreferrer" class="btn btn--outline">
              <svg class="paypal-icon" width="20" height="24" viewBox="0 0 24 32" fill="none">
                <path d="M20.4 7.8c-.1-.7-.3-1.3-.6-1.9C18.6 3.5 15.8 2 12.3 2H4.8c-.5 0-.9.4-1 .8L1 25.2c0 .4.2.7.6.7h4.5l1.1-7.1-.1.2c.1-.5.5-.8 1-.8h2c4 0 7.2-1.6 8.1-6.4.1-.1.1-.3.1-.4.3-1.6.2-2.7-.5-3.6z" fill="#27346A"/>
                <path d="M20.4 7.8c-.1-.7-.3-1.3-.6-1.9C18.6 3.5 15.8 2 12.3 2H4.8c-.5 0-.9.4-1 .8L1 25.2c0 .4.2.7.6.7h4.5l1.1-7.1-.1.2c.1-.5.5-.8 1-.8h2c4 0 7.2-1.6 8.1-6.4.1-.1.1-.3.1-.4" fill="#27346A"/>
                <path d="M9.2 7.9c0-.3.2-.5.4-.7.1-.1.3-.1.4-.1h6.2c.7 0 1.4.1 2 .2.2 0 .3.1.5.1.2.1.3.1.5.2.1 0 .2.1.2.1.3.1.5.3.7.5.3-1.6 0-2.7-.7-3.7C18.2 3.1 15.5 1.7 12 1.7H4.5c-.5 0-1 .4-1 .9L.6 25.3c-.1.4.3.8.7.8h4.5l1.1-7.2 2.3-11z" fill="#2790C3"/>
                <path d="M20.9 11.4c-.9 4.7-4 6.3-8 6.3h-2c-.5 0-.9.4-1 .9l-1 6.6c0 .3.2.6.5.6h3.6c.4 0 .8-.3.9-.7v-.2l.7-4.2v-.2c.1-.4.4-.7.9-.7h.5c3.5 0 6.3-1.4 7.1-5.6.3-1.7.2-3.2-.7-4.2-.3-.3-.6-.5-.9-.6-.1.7-.3 1.3-.6 2z" fill="#1F264F"/>
              </svg>
              <span>Give via PayPal</span>
            </a>
          </div>
          <div class="support-card">
            <h3>Bank Transfer</h3>
            <div class="bank-details">
              <div class="bank-row">
                <span class="bank-label">Beneficiary</span>
                <span class="bank-value">Helen Chijioke</span>
              </div>
              <div class="bank-row">
                <span class="bank-label">IBAN</span>
                <span class="bank-value">DE22 1001 0178 3877 6363 76</span>
              </div>
              <div class="bank-row">
                <span class="bank-label">BIC / SWIFT</span>
                <span class="bank-value">REVODEB2</span>
              </div>
              <div class="bank-row">
                <span class="bank-label">Correspondent BIC</span>
                <span class="bank-value">CHASDEFX</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-cta">
          <p class="footer-cta-text">Register now to join other young believers to experience times of refreshing!</p>
          <a href="/register" class="btn btn--primary">Register Now</a>
        </div>
        <div class="footer-content">
          <div class="footer-info">
            <p class="footer-title">BBC'26</p>
            <p>Boldness and Burdens Conference</p>
          </div>
          <div class="footer-contact">
            <p class="contact-label">Enquiries</p>
            <a href="mailto:info@boldnessandburdens.com">info@boldnessandburdens.com</a>
          </div>
        </div>
        <div class="footer-bottom">
          <p>2026 Boldness and Burdens Conference</p>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>

<style>
  /* Hero Section - Editorial Split */
  .hero {
    min-height: 100vh;
    min-height: 100svh;
    display: grid;
    grid-template-columns: 1fr;
    background: var(--color-charcoal);
    overflow: hidden;
  }

  .hero-image {
    position: relative;
    height: 55vh;
    min-height: 360px;
    overflow: hidden;
  }

  .hero-image::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120px;
    background: linear-gradient(to top, var(--color-charcoal), transparent);
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 20%;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--space-xl) var(--space-lg) var(--space-2xl);
    color: var(--color-cream);
  }

  .hero-inner {
    max-width: 480px;
  }

  .hero-tagline {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-style: italic;
    font-weight: 400;
    color: var(--color-cream);
    line-height: 1.5;
    margin: 0 0 var(--space-2xl);
  }

  .hero-details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-2xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid rgba(212, 135, 58, 0.3);
  }

  .hero-detail {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .hero-detail-label {
    font-size: 0.625rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .hero-detail-value {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 400;
    color: var(--color-cream);
    line-height: 1.2;
  }

  .hero-detail-year,
  .hero-detail-sub {
    font-size: 0.75em;
    color: rgba(250, 246, 240, 0.5);
  }

  .hero-cta {
    align-self: flex-start;
    background: var(--color-accent);
    color: var(--color-charcoal);
    font-weight: 500;
    font-size: 1rem;
    padding: var(--space-md) var(--space-2xl);
  }

  .hero-cta:hover {
    background: var(--color-accent-light);
    color: var(--color-charcoal);
  }

  @media (max-width: 480px) {
    .hero-cta {
      width: 100%;
      text-align: center;
    }
  }

  @media (min-width: 768px) {
    .hero-content {
      padding: var(--space-2xl) var(--space-xl) var(--space-3xl);
    }

    .hero-tagline {
      font-size: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      grid-template-columns: 1fr 1fr;
    }

    .hero-image {
      height: auto;
      min-height: 100vh;
      min-height: 100svh;
      position: sticky;
      top: 0;
    }

    .hero-image::after {
      display: none;
    }

    .hero-content {
      padding: var(--space-4xl);
      min-height: 100vh;
      min-height: 100svh;
    }
  }

  @media (min-width: 1200px) {
    .hero-content {
      padding: var(--space-4xl) var(--space-4xl) var(--space-4xl) 5rem;
    }
  }

  /* Countdown Section */
  .countdown-section {
    background: var(--color-cream-dark);
    padding: var(--space-lg) 0;
  }

  @media (min-width: 600px) {
    .countdown-section {
      padding: var(--space-2xl) 0;
    }
  }

  .countdown {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
  }

  @media (min-width: 600px) {
    .countdown {
      gap: var(--space-2xl);
    }
  }

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .countdown-value {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 6vw, 3rem);
    font-weight: 400;
    color: var(--color-accent-dark);
    line-height: 1;
  }

  .countdown-label {
    font-size: 0.5rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-charcoal-light);
    margin-top: var(--space-xs);
  }

  @media (min-width: 600px) {
    .countdown-label {
      font-size: 0.625rem;
      letter-spacing: 0.2em;
      margin-top: var(--space-sm);
    }
  }

  /* Vision Section */
  .vision {
    padding: var(--space-3xl) 0;
  }

  .vision .section-title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    margin-bottom: var(--space-md);
    text-align: center;
  }

  .vision .divider {
    margin: 0 auto var(--space-xl);
  }

  .vision-intro {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-charcoal-light);
    margin-bottom: var(--space-xl);
  }

  .vision-highlight {
    text-align: center;
    margin: var(--space-2xl) 0;
    padding: var(--space-xl) 0;
  }

  .vision-highlight p {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 4vw, 1.75rem);
    font-style: italic;
    line-height: 1.5;
    color: var(--color-charcoal);
    margin: 0;
  }

  .vision-highlight p:first-child {
    margin-bottom: var(--space-sm);
  }

  .vision-highlight p:first-child::before {
    content: '"';
    color: var(--color-accent);
  }

  .vision-highlight p:last-child::after {
    content: '"';
    color: var(--color-accent);
  }

  .vision-subheading {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--color-charcoal);
  }

  .vision-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-xl);
  }

  .vision-list li {
    position: relative;
    padding-left: var(--space-lg);
    margin-bottom: var(--space-sm);
    font-size: 0.9375rem;
    color: var(--color-charcoal-light);
  }

  .vision-list li::before {
    content: '+';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: 500;
  }

  .vision-closing {
    font-family: var(--font-display);
    font-size: 1.0625rem;
    font-style: italic;
    color: var(--color-charcoal);
    margin-bottom: var(--space-md);
  }

  .vision-cta {
    font-size: 0.9375rem;
    color: var(--color-charcoal);
    margin: 0;
  }

  @media (min-width: 768px) {
    .vision {
      padding: var(--space-4xl) 0;
    }

    .vision-intro {
      font-size: 1.0625rem;
    }
  }

  /* Details Section */
  .details {
    background: var(--color-charcoal);
    color: var(--color-cream);
    padding: var(--space-3xl) 0;
  }

  .details-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  @media (min-width: 600px) {
    .details-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xl);
    }
  }

  @media (min-width: 900px) {
    .details-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-2xl);
    }
  }

  .detail-card {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  @media (min-width: 900px) {
    .detail-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0;
    }
  }

  .detail-icon {
    width: 28px;
    height: 28px;
    min-width: 28px;
    color: var(--color-accent);
  }

  @media (min-width: 900px) {
