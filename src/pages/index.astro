---
import BaseLayout from '../layouts/BaseLayout.astro';

const eventJsonLd = {
  "@context": "https://schema.org",
  "@type": "Event",
  "name": "Boldness and Burdens Conference 2026",
  "description": "A transformative summer camp designed to equip young people with godly courage, faith and clarity to face life's challenges.",
  "startDate": "2026-07-16",
  "endDate": "2026-07-19",
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "location": {
    "@type": "Place",
    "name": "KJFE Chance",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Teufelsseechaussee 17",
      "addressLocality": "Berlin",
      "postalCode": "14193",
      "addressCountry": "DE"
    }
  },
  "image": "https://images.unsplash.com/photo-1507692049790-de58290a4334?w=1200&q=80",
  "organizer": {
    "@type": "Organization",
    "name": "Boldness and Burdens",
    "url": "https://boldnessandburdens.com"
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "EUR",
    "availability": "https://schema.org/InStock",
    "url": "https://boldnessandburdens.com/register"
  },
  "isAccessibleForFree": true
};
---

<BaseLayout
  title="BBC'26 - School of the Spirit | Boldness and Burdens Conference"
  canonicalPath="/"
>
  <script type="application/ld+json" set:html={JSON.stringify(eventJsonLd)} />
  <main>
    <!-- Hero Section -->
    <header class="hero">
      <div class="hero-image">
        <img
          src="https://images.unsplash.com/photo-1507692049790-de58290a4334?w=800&q=80"
          alt="Hands raised in worship and prayer"
          loading="eager"
        />
      </div>
      <div class="hero-content animate-fade-in">
        <div class="logo">
          <span class="logo-text">BBC</span>
          <span class="logo-year">'26</span>
        </div>
        <h1 class="hero-title">
          Boldness<br/>
          <span class="hero-amp">&</span><br/>
          Burdens
        </h1>
        <p class="hero-subtitle">Conference 2026</p>
        <p class="hero-theme">School of the Spirit</p>
        <p class="hero-tagline">
          A transformative summer camp designed to equip young people
          with godly courage, faith and clarity to face life's challenges.
        </p>
        <a href="/register" class="btn btn--primary hero-cta">Register Now</a>
      </div>
    </header>

    <!-- Countdown Section -->
    <section class="countdown-section">
      <div class="container">
        <div class="countdown" id="countdown">
          <div class="countdown-item">
            <span class="countdown-value" id="days">---</span>
            <span class="countdown-label">Days</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-value" id="hours">--</span>
            <span class="countdown-label">Hours</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-value" id="minutes">--</span>
            <span class="countdown-label">Minutes</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-value" id="seconds">--</span>
            <span class="countdown-label">Seconds</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Vision Section -->
    <section class="vision">
      <div class="container container--narrow">
        <h2 class="section-title">Time for Boldness & Burdens Conference 2026</h2>
        <div class="divider"></div>
        <p class="vision-intro">
          There are special times and seasons. Moments God sets apart for encounter,
          alignment, and renewal. Boldness & Burdens Conference is a gathering set apart
          for young people, individuals, and families who desire more of God.
        </p>
        <blockquote class="vision-highlight">
          <p>This is a School of the Spirit.</p>
          <p>A place of prayer, teaching, waiting, and encounter.</p>
        </blockquote>
        <h3 class="vision-subheading">What to Expect</h3>
        <ul class="vision-list">
          <li>Extended times of prayer</li>
          <li>Worship and spiritual songs</li>
          <li>Teaching and impartation</li>
          <li>Space for God to move supernaturally</li>
          <li>Moments of personal encounter and renewal</li>
        </ul>
        <p class="vision-closing">
          This is a time to lay down burdens and receive boldness.
        </p>
        <p class="vision-cta">
          <strong>Pray. Plan. Prepare. Invite a friend. Come expectant.</strong>
        </p>
      </div>
    </section>

    <!-- Details Section -->
    <section class="details">
      <div class="container">
        <div class="details-grid">
          <div class="detail-card animate-fade-in-up">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="4" width="18" height="18" rx="2"/>
              <path d="M16 2v4M8 2v4M3 10h18"/>
              <path d="M8 14h.01M12 14h.01M16 14h.01M8 18h.01M12 18h.01"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">When</span>
              <h3 class="detail-value">July 16-19</h3>
              <p class="detail-sub">2026</p>
            </div>
          </div>
          <div class="detail-card animate-fade-in-up delay-1">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
              <circle cx="12" cy="9" r="2.5"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">Where</span>
              <h3 class="detail-value">Berlin-Grunewald</h3>
              <p class="detail-sub">KJFE, Chance<br/>Teufelsseechaussee 17<br/>14193 Berlin</p>
            </div>
          </div>
          <div class="detail-card animate-fade-in-up delay-2">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9z"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">Duration</span>
              <h3 class="detail-value">3 Nights</h3>
              <p class="detail-sub">1 Conference</p>
            </div>
          </div>
          <div class="detail-card animate-fade-in-up delay-3">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M20 12v6a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-6"/>
              <path d="M12 3v12M12 3l4 4M12 3 8 7"/>
              <rect x="2" y="9" width="20" height="5" rx="1"/>
            </svg>
            <div class="detail-text">
              <span class="detail-label">Cost</span>
              <h3 class="detail-value">Free</h3>
              <p class="detail-sub">Registration required</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section class="experience">
      <div class="container">
        <h2 class="section-title">The Experience</h2>
        <div class="divider"></div>
        <div class="experience-grid">
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 5c-1.5-2-4-2.5-6-1s-2.5 4.5-1 7c1 1.5 7 7 7 7s6-5.5 7-7c1.5-2.5 1-5.5-1-7s-4.5-1-6 1z"/>
              <path d="M12 5v4M10 7h4"/>
            </svg>
            <h3>Prayer</h3>
            <p>Extended times of personal and corporate prayer</p>
          </div>
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="3"/>
              <path d="M12 1v4M12 19v4M4.22 4.22l2.83 2.83M16.95 16.95l2.83 2.83M1 12h4M19 12h4M4.22 19.78l2.83-2.83M16.95 7.05l2.83-2.83"/>
            </svg>
            <h3>Worship</h3>
            <p>Spirit-led worship and spiritual songs</p>
          </div>
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="9" cy="7" r="4"/>
              <path d="M3 21v-2a4 4 0 0 1 4-4h4a4 4 0 0 1 4 4v2"/>
              <circle cx="17" cy="10" r="3"/>
              <path d="M21 21v-1.5a3 3 0 0 0-3-3h-1"/>
            </svg>
            <h3>Fellowship</h3>
            <p>Connect with like-minded believers</p>
          </div>
          <div class="experience-card">
            <svg class="experience-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2l2.4 7.4H22l-6.2 4.5 2.4 7.4L12 17l-6.2 4.3 2.4-7.4L2 9.4h7.6z"/>
            </svg>
            <h3>Encounters</h3>
            <p>Space for God to move supernaturally</p>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included Section -->
    <section class="included">
      <div class="container">
        <div class="included-grid">
          <div class="included-text">
            <h2 class="section-title">What's Included</h2>
            <div class="divider"></div>
            <ul class="included-list">
              <li>
                <strong>Accommodation</strong>
                <span>Provided free of charge</span>
              </li>
              <li>
                <strong>Meals</strong>
                <span>One meal per day provided. Bring your own snacks if needed</span>
              </li>
            </ul>
          </div>
          <div class="included-bring">
            <h3>What to Bring</h3>
            <p class="bring-intro">Please bring your personal toiletries:</p>
            <ul class="bring-list">
              <li>Towel</li>
              <li>Blanket</li>
              <li>Soap / shower gel</li>
              <li>Toothbrush & toothpaste</li>
              <li>Any personal hygiene items</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-cta">
          <p class="footer-cta-text">Register now to join other young believers to experience times of refreshing!</p>
          <a href="/register" class="btn btn--primary">Register Now</a>
        </div>
        <div class="footer-content">
          <div class="footer-info">
            <p class="footer-title">BBC'26</p>
            <p>Boldness and Burdens Conference</p>
          </div>
          <div class="footer-contact">
            <p class="contact-label">Enquiries</p>
            <a href="mailto:info@boldnessandburdens.com">info@boldnessandburdens.com</a>
          </div>
        </div>
        <div class="footer-bottom">
          <p>2026 Boldness and Burdens Conference</p>
        </div>
      </div>
    </footer>
  </main>
</BaseLayout>

<style>
  /* Hero Section - Split Layout */
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr;
    background: var(--color-cream);
  }

  .hero-image {
    height: 40vh;
    min-height: 280px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 30%;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: var(--space-xl) var(--space-lg);
    min-height: 60vh;
  }

  .logo {
    display: flex;
    align-items: baseline;
    gap: 2px;
    margin-bottom: var(--space-xl);
  }

  .logo-text {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    color: var(--color-charcoal);
  }

  .logo-year {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-accent);
  }

  @media (min-width: 768px) {
    .hero {
      grid-template-columns: 1fr 1fr;
    }

    .hero-image {
      height: 100vh;
      position: sticky;
      top: 0;
    }

    .hero-content {
      padding: var(--space-4xl);
      min-height: 100vh;
    }
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 400;
    line-height: 0.9;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-md);
  }

  .hero-amp {
    color: var(--color-accent);
    font-size: 0.5em;
    font-weight: 400;
  }

  .hero-subtitle {
    font-family: var(--font-display);
    font-size: clamp(1rem, 2vw, 1.25rem);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-charcoal-light);
    margin-bottom: var(--space-xl);
  }

  .hero .divider {
    margin: var(--space-xl) auto;
  }

  .hero-theme {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-style: italic;
    color: var(--color-charcoal);
    margin-bottom: var(--space-lg);
  }

  .hero-tagline {
    font-size: 0.9375rem;
    color: var(--color-charcoal-light);
    line-height: 1.8;
    max-width: 400px;
    margin: 0;
  }

  .hero-cta {
    margin-top: var(--space-xl);
    align-self: flex-start;
  }

  @media (max-width: 480px) {
    .hero-cta {
      width: 100%;
      text-align: center;
    }
  }

  /* Countdown Section */
  .countdown-section {
    background: var(--color-cream-dark);
    padding: var(--space-lg) 0;
  }

  @media (min-width: 600px) {
    .countdown-section {
      padding: var(--space-2xl) 0;
    }
  }

  .countdown {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
  }

  @media (min-width: 600px) {
    .countdown {
      gap: var(--space-2xl);
    }
  }

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .countdown-value {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 6vw, 3rem);
    font-weight: 400;
    color: var(--color-accent-dark);
    line-height: 1;
  }

  .countdown-label {
    font-size: 0.5rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-charcoal-light);
    margin-top: var(--space-xs);
  }

  @media (min-width: 600px) {
    .countdown-label {
      font-size: 0.625rem;
      letter-spacing: 0.2em;
      margin-top: var(--space-sm);
    }
  }

  /* Vision Section */
  .vision {
    padding: var(--space-3xl) 0;
  }

  .vision .section-title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    margin-bottom: var(--space-md);
    text-align: center;
  }

  .vision .divider {
    margin: 0 auto var(--space-xl);
  }

  .vision-intro {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-charcoal-light);
    margin-bottom: var(--space-xl);
  }

  .vision-highlight {
    text-align: center;
    margin: var(--space-2xl) 0;
    padding: var(--space-xl) 0;
  }

  .vision-highlight p {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 4vw, 1.75rem);
    font-style: italic;
    line-height: 1.5;
    color: var(--color-charcoal);
    margin: 0;
  }

  .vision-highlight p:first-child {
    margin-bottom: var(--space-sm);
  }

  .vision-highlight p:first-child::before {
    content: '"';
    color: var(--color-accent);
  }

  .vision-highlight p:last-child::after {
    content: '"';
    color: var(--color-accent);
  }

  .vision-subheading {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    color: var(--color-charcoal);
  }

  .vision-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-xl);
  }

  .vision-list li {
    position: relative;
    padding-left: var(--space-lg);
    margin-bottom: var(--space-sm);
    font-size: 0.9375rem;
    color: var(--color-charcoal-light);
  }

  .vision-list li::before {
    content: '+';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: 500;
  }

  .vision-closing {
    font-family: var(--font-display);
    font-size: 1.0625rem;
    font-style: italic;
    color: var(--color-charcoal);
    margin-bottom: var(--space-md);
  }

  .vision-cta {
    font-size: 0.9375rem;
    color: var(--color-charcoal);
    margin: 0;
  }

  @media (min-width: 768px) {
    .vision {
      padding: var(--space-4xl) 0;
    }

    .vision-intro {
      font-size: 1.0625rem;
    }
  }

  /* Details Section */
  .details {
    background: var(--color-charcoal);
    color: var(--color-cream);
    padding: var(--space-3xl) 0;
  }

  .details-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  @media (min-width: 600px) {
    .details-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-xl);
    }
  }

  @media (min-width: 900px) {
    .details-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-2xl);
    }
  }

  .detail-card {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  @media (min-width: 900px) {
    .detail-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0;
    }
  }

  .detail-icon {
    width: 28px;
    height: 28px;
    min-width: 28px;
    color: var(--color-accent);
  }

  @media (min-width: 900px) {
    .detail-icon {
      width: 32px;
      height: 32px;
      min-width: 32px;
      margin-bottom: var(--space-md);
    }
  }

  .detail-text {
    flex: 1;
  }

  @media (min-width: 900px) {
    .detail-text {
      text-align: center;
    }
  }

  .detail-label {
    display: block;
    font-size: 0.5rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-accent);
    margin-bottom: var(--space-xs);
  }

  @media (min-width: 768px) {
    .detail-label {
      font-size: 0.625rem;
      letter-spacing: 0.2em;
      margin-bottom: var(--space-sm);
    }
  }

  .detail-value {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 2px;
    color: var(--color-cream);
  }

  @media (min-width: 768px) {
    .detail-value {
      font-size: clamp(1.125rem, 2vw, 1.375rem);
      margin-bottom: var(--space-xs);
    }
  }

  .detail-sub {
    font-size: 0.75rem;
    color: rgba(250, 248, 245, 0.6);
    margin: 0;
    line-height: 1.5;
  }

  @media (min-width: 768px) {
    .detail-sub {
      font-size: 0.8125rem;
      line-height: 1.6;
    }
  }

  /* Experience Section */
  .experience {
    padding: var(--space-3xl) 0;
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 400;
    text-align: center;
  }

  .experience .divider {
    margin: var(--space-md) auto var(--space-xl);
  }

  @media (min-width: 768px) {
    .experience .divider {
      margin: var(--space-lg) auto var(--space-2xl);
    }
  }

  .experience-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-lg);
  }

  @media (min-width: 480px) {
    .experience-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 900px) {
    .experience-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-xl);
    }
  }

  .experience-card {
    padding: var(--space-lg);
    background: var(--color-cream-dark);
    text-align: center;
  }

  @media (min-width: 768px) {
    .experience-card {
      padding: var(--space-xl) var(--space-lg);
    }
  }

  .experience-icon {
    width: 32px;
    height: 32px;
    color: var(--color-accent);
    margin: 0 auto var(--space-sm);
    display: block;
  }

  @media (min-width: 768px) {
    .experience-icon {
      width: 40px;
      height: 40px;
      margin-bottom: var(--space-md);
    }
  }

  .experience-card h3 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: var(--space-xs);
  }

  @media (min-width: 768px) {
    .experience-card h3 {
      font-size: 1.125rem;
      margin-bottom: var(--space-sm);
    }
  }

  .experience-card p {
    font-size: 0.8125rem;
    color: var(--color-charcoal-light);
    margin: 0;
    line-height: 1.6;
  }

  @media (min-width: 768px) {
    .experience {
      padding: var(--space-4xl) 0;
    }
  }

  /* Included Section */
  .included {
    background: var(--color-cream-dark);
    padding: var(--space-4xl) 0;
  }

  .included-text .section-title {
    text-align: left;
  }

  .included-text .divider {
    margin: var(--space-md) 0 var(--space-xl);
  }

  .included-grid {
    display: grid;
    gap: var(--space-3xl);
  }

  @media (min-width: 768px) {
    .included-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-4xl);
    }
  }

  .included-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .included-list li {
    padding: var(--space-lg) 0;
    border-bottom: 1px solid rgba(42, 40, 38, 0.1);
  }

  .included-list li:last-child {
    border-bottom: none;
  }

