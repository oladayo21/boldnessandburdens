---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Registration Complete"
  description="Your registration for BBC'26 has been received."
  canonicalPath="/success"
  noindex={true}
>
  <main class="success-page">
    <div class="success-card animate-fade-in-up">
        <div class="success-icon">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22 4 12 14.01 9 11.01"/>
          </svg>
        </div>

        <h1 class="success-title">Registration Complete</h1>

        <p class="success-message">
          Thank you for registering for the Boldness and Burdens Conference 2026.
          We have received your information and will send a confirmation email shortly.
        </p>

        <div class="divider"></div>

        <div class="next-steps">
          <h2>What's Next?</h2>
          <ul>
            <li>Check your email for a confirmation message</li>
            <li>Mark your calendar: <strong>July 16-19, 2026</strong></li>
            <li>Prepare your personal toiletries for the stay</li>
          </ul>
        </div>

        <a href="/" class="btn btn--primary">
          <span>Back to Home</span>
        </a>
    </div>
  </main>
</BaseLayout>

<style>
  .success-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl) var(--space-md);
    background: linear-gradient(180deg, var(--color-cream) 0%, var(--color-cream-dark) 100%);
  }

  .success-card {
    background: var(--color-cream);
    border: 1px solid var(--color-cream-dark);
    padding: var(--space-2xl);
    text-align: center;
    max-width: 500px;
  }

  @media (min-width: 768px) {
    .success-card {
      padding: var(--space-3xl);
    }
  }

  .success-icon {
    color: var(--color-success, #22c55e);
    margin-bottom: var(--space-lg);
  }

  .success-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 400;
    margin-bottom: var(--space-md);
  }

  .success-message {
    color: var(--color-charcoal-light);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }

  .success-card .divider {
    margin: var(--space-xl) auto;
  }

  .next-steps {
    text-align: left;
    margin-bottom: var(--space-xl);
  }

  .next-steps h2 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .next-steps ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .next-steps li {
    position: relative;
    padding-left: var(--space-lg);
    margin-bottom: var(--space-sm);
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--color-charcoal-light);
  }

  .next-steps li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.65em;
    width: 6px;
    height: 1px;
    background: var(--color-accent);
  }

  .btn--primary {
    display: inline-flex;
    margin-top: var(--space-md);
  }
</style>
